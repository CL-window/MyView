<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/bottom_view_left"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/video"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="33dp"
            android:layout_gravity="bottom|center_horizontal" />

        <LinearLayout
            android:id="@+id/bottom_view_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/bottom_view_center_big"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:src="@drawable/camera_large"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/bottom_view_center_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="照片"
                android:textSize="15sp"
                android:textColor="#b23c58"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/bottom_view_right"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/gifp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="33dp"
            android:layout_gravity="bottom|center_horizontal" />

</LinearLayout>

